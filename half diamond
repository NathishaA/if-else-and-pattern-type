//half diamond
#include<bits/stdc++.h>
using namespace std;

int main()
{
    int row=2;
    
    for(int i=1;i<=row;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"*";
        }
        
        cout<<endl;
    }
    
    for(int i=row-1;i>=i;i--)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"*";
        }
        
        cout<<endl;
    }
}
